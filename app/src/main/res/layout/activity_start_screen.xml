<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startScreen">
    <RelativeLayout
        android:layout_marginTop="75dp"
        android:id="@+id/logo2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="@+id/centerStartScreen">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:src="@drawable/logo2"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/centerStartScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo2"
        android:layout_centerInParent="true"
        android:fontFamily="@font/yeonsungregular"
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:text="Enjoy Restaurant Quality Meals\nat Home"
        android:textColor="@color/lightGreen"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:id="@+id/nextButtonStartScreen"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Next"
            android:textSize="30dp"
            android:backgroundTint="@color/GreenButton"
            android:fontFamily="@font/yeonsungregular"
            app:cornerRadius="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designed By"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/CadmiumGreen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abjeet"
            android:gravity="center"
            android:fontFamily="@font/yeonsungregular"
            android:textSize="29sp"
            android:textColor="@color/CadmiumGreen"/>

    </LinearLayout>

</RelativeLayout>